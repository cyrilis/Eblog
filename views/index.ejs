<%- include header.ejs %>
<div class="container posts">
    <ul class="post_list">
        <% posts.forEach(function(post, index){   %>
        <li>
            <h2><a href="/post/<%= post.time.day+"/"+post.title %>"><%= post.title  %></a></h2>
            <p>作者： <a href="/<%= post.name %>"><%= post.name   %></a>
               日期： <%= post.time.minute  %>
            </p>
            <p>
                <%- post.content   %>
            </p>
        </li>
        <% })   %>
    </ul>
</div>
<% include footer.ejs %>