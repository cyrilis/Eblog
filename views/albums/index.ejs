<%- include ../header.ejs %>
<div class="container albums">
    <% if(albums.length){ %>
    <ul class="albums_list">
        <% albums.forEach(function(album,index){ %>
        <li>
            <a href="/albums/<%= album.title %>">
                <img src="<%= album.cover %>" alt=""/>
                <p class="album_title"><%= album.title %></p>
            </a>
        </li>
        <%}) %>
    </ul>
    <%}else{ %>
    <p>It seems there is no album yet, you can create one by press the button bellow.</p>
    <a class="button" href="/albums/new">Create an album</a>
    <%} %>

    <div class="pagination clearfix">
        <% if(page-1>0){    %>
        <a class="button prev" href="/pages/<%= +page-1 %>">Prev</a>
        <%} %>
        <%if(count/5>page){ %>
        <a class="button next" href="/pages/<%= +page+1 %>">Next</a>
        <%}   %>
    </div>
</div>
<% include ../footer.ejs %>