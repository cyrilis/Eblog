<%- include header.ejs %>
<div class="container post">
    <section class="clearfix">
        <div class="post_title clearfix">
            <h2><a href="/post/<%= post.time.day+"/"+post.title %>"><%= post.title  %></a></h2>
            <p class="info">作者: <a href="/u/<%= post.name %>"><%= post.name %> </a>
                <span> 日期: <%= post.time.minute  %></span>
                <% if(user&&post.name==user.name){ %>
                <a href="/post/<%= post.time.day+"/"+post.title %>/edit">编辑</a>
                <a class="confirm" data-confirm="Are you sure to Detele this blog?" href="/post/<%= post.time.day+"/"+post.title %>/delete">刪除</a>
                <% } %>
            </p>
        </div>
        <div class="post_content clearfix">
            <%- post.content   %>
        </div>
        <div class="post_info clearfix">
            <% if(post.tags){ %>
            <div class="tag_links">
                Tags:&nbsp;&nbsp;
                <%post.tags.forEach(function(tag){ %>
                <a class="tag_link" href="/tags/<%=tag.tag %>">#<%= tag.tag %></a>
                <%})%>
            </div>
            <%}   %>
            <% if(post.category){ %>
            <div class="category_link">Category:&nbsp;&nbsp;<a href="/categories/<%=post.category%>"><%=post.category %></a></div>
            <%}   %>
        </div>
    </section>
</div>
<% include footer.ejs %>