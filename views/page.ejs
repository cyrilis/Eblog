<%- include header.ejs %>
<div class="container post">
    <section>
        <div class="title clearfix">
            <h2><a href="/post/<%= post.time.day+"/"+post.title %>"><%= post.title  %></a></h2>
            <p class="info">作者： <a href="/<%= post.name %>"><%= post.name   %></a>
                日期： <%= post.time.minute  %>
                <% if(user&&post.name==user.name){ %>
                <a href="/post/<%= post.time.day+"/"+post.title %>/edit">编辑</a>
                <a class="confirm" data-confirm="Are you sure to Detele this blog?" href="/post/<%= post.time.day+"/"+post.title %>/delete">刪除</a>
            </p>
        </div>
            <% } %>
        <p>
            <%- post.content   %>
        </p>
    </section>
</div>
<% include footer.ejs %>