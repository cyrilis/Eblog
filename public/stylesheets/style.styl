maincolor = #18B0B6
border-radius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments
@font-face {
  font-family: 'Open Sans';
  font-style: normal;
  font-weight: 300;
  src: local('Open Sans Light'), local('OpenSans-Light'), url(fonts/Open-Sans-300.woff) format('woff');
}
@font-face {
  font-family: 'Open Sans';
  font-style: normal;
  font-weight: 400;
  src: local('Open Sans Semibold'), local('OpenSans-Semibold'), url(fonts/Open-Sans-400.woff) format('woff');
}

@font-face {
  font-family: 'Open Sans';
  font-style: normal;
  font-weight: 600;
  src: local('Open Sans Light'), local('OpenSans-Light'), url(fonts/Open-Sans-700.woff) format('woff');
}
::selection{
  background maincolor
  color #fff
}
body
  margin: 0;
  padding 0;
  background: #ffffff
  font-family: "Open Sans","Microsoft Yahei","Helvetica Neue", Arail, sans-serif
  font-size 14px
  line-height 26px
  color #555
  position relative
  opacity 1
  &.unloaded *
    -webkit-transition: none !important
    -moz-transition: none !important
    -ms-transition: none !important
    -o-transition: none !important
    transition: none !important
p
  margin: 0 0 10px 0
  font inherit
img
  max-width 100%
  height auto
blockquote
  margin: 0
  padding 10px 0 10px 20px
  border-left: 5px solid maincolor
  line-height 1.3
  font-size 16px
  background #f8f8f8
pre,code
  font-family Consolas, Menlo, Monaco, 'Lucida Console', 'Liberation Mono', 'DejaVu Sans Mono', 'Bitstream Vera Sans Mono', 'Courier New', monospace, serif
input:not([type='submit']):not([type='radio']):not([type='checkbox']),textarea,select
  width: 260px
  line-height 19px
  padding 5px
  border-radius 3px
  border 2px solid #ddd
  -webkit-transition: all 0.5s
  -moz-transition: all 0.5s
  -ms-transition: all 0.5s
  -o-transition: all 0.5s
  transition: all 0.5s
  -webkit-transition-property: color, background, border-color, outline
  -moz-transition-property: color, background, border-color, outline
  -ms-transition-property: color, background, border-color, outline
  -o-transition-property: color, background, border-color, outline
  transition-property: color, background, border-color, outline
  &:focus
    border-color #aaaaaa
    outline none
  &.double_width
    width 520px
input[type="radio"],input[type='checkbox']
  line-height 1
  padding 5px
[contenteditable='true']
  width 100%
  min-height 400px
  height auto
  border-top 0
  margin-bottom 15px
  &>div,&>p
    font-size 14px
    margin: 0 0 10px 0;
    line-height 26px
  & img
    max-width 100%
    display inline-block
    line-height 0!important
    &::selection
      background rgba(0,0,0,.3)
      color #0099ff
#resize_arrow
  padding 0
  margin 0
  margin-left -5px
  margin-top -5px
  display block
  height 10px
  width 10px
  position absolute
  background #000
  line-height 0
  cursor: nw-resize
  z-index 1000
.container
  width: 1000px;
  margin: 0 auto;
.pull-right
  float right
.pull-left
  float left
.flash_success
.flash_error
  padding 8px 15px
  font-size 16px
  color #ffffff
  -webkit-border-radius: 3px
  -moz-border-radius: 3px
  border-radius: 3px
  margin-bottom 20px
  position: fixed;
  bottom -100px;
  width 200px
  right 10px
  opacity 0
  -webkit-transition: all .5s ease-in
  -moz-transition: all .5s ease-in
  -ms-transition: all .5s ease-in
  -o-transition: all .5s ease-in
  transition: all .5s ease-in
  &.show
    bottom 30px
    opacity 1
.flash_error
  background #EE688D
.flash_success
  background maincolor
#post_title_outer
  font-size 20px
  width 100%
  margin-left -7px
#post_title_outer:-moz-placeholder {
  line-height 1.3
}

#post_title_outer::-moz-placeholder {
  line-height 1.3
}

#post_title_outer:-ms-input-placeholder {
  line-height 1.3
}

#post_title_outer::-webkit-input-placeholder {
  line-height 1.3
}
span#tags_container
  border: 2px solid #ccc
  border-radius: 3px
  height: inherit
  display: inline-block
  padding: 3px
  padding-bottom 0px
  min-width 260px
  cursor: text
  input
    width 30px
#newTag
  width: 60px
  height: auto
  padding: 0
  border: 0
  line-height: 1.3
  font-size: 14px
  min-width 100px
span.tag_span
  position relative
  background: #18B0B6
  color: #FFF
  padding: 0px 20px
  border-radius: 3px
  display: block
  float left
  cursor: pointer
  margin-right: 4px
  margin-bottom 3px
  &:hover
    .tag_close
      opacity 1
  .tag_close
    opacity 0
    position absolute
    right 3px
    top 3px
    display block
    width 20px
    height 20px
    line-height 20px
    text-align center
    font-size 18px
    font-weight bold
    -webkit-transition: all .3s
    -moz-transition: all .3s
    -ms-transition: all .3s
    -o-transition: all .3s
    transition: all .3s
  .tag_name
    display inline-block
.form-group
  margin-bottom 10px
  border-color: #ddd;
  label
    float left
    display: inline-block
    width: 150px;
    text-align right
    margin-right 20px
    line-height 36px
    #post &
      width: 70px
      text-align: left
      margin-right: 5px
  input,textarea
    display inline-block
a
  color #18B0B6
.button
  display inline-block
  text-align center
  min-width 45px
  padding 8px 14px
  border-radius 3px
  border 1px solid #d8d8d8
  color #666666
  font-size 16px
  background #d8d8d8
  text-decoration none
  outline none
  -webkit-transition: all .3s
  -moz-transition: all .3s
  -ms-transition: all .3s
  -o-transition: all .3s
  transition: all .3s
  &:hover,&:focus
    background maincolor
    border-color maincolor
    color #ffffff
.clearfix:before
.clearfix:after
  display table
  content ""
.clearfix:after
  clear both
header
  width 100%
  border-bottom 1px solid #d8d8d8
  .header_navs
    ul
      list-style none
      margin 0
      padding 0
      float right
      border-left 1px solid #d8d8d8
      li
        float left
        a
          display inline-block
          padding 20px 24px
          line-height 1
          background #ffffff
          color #666666
          border-right: 1px solid #d8d8d8
          text-decoration none
          -webkit-transition: all .3s
          -moz-transition: all .3s
          -ms-transition: all .3s
          -o-transition: all .3s
          transition: all .3s
          &:hover
            color #ffffff
            background maincolor
            border-color maincolor
main
  padding 20px 0
  .posts
    padding 0
    div.post_list
      margin: 0
      padding 0
      list-style none
      &>article
        margin-bottom 20px
        .post_content
          border-bottom 1px solid #d8d8d8
        h2
          color #777
          font-size 24px
          line-height 1
          font-weight 600
          &>a
            text-decoration none
            text-transform capitalize
div.confirm,div.show_box
  display block
  opacity 0
  position fixed
  left 50%
  top 45%
  margin-top -100px
  margin-left -240px
  width: 480px
  -webkit-border-radius: 4px
  -moz-border-radius: 4px
  border-radius: 4px
  border 1px solid #d8d8d8
  background #ffffff
  padding 10px
  padding-top 30px
  -webkit-transition: all .3s
  -moz-transition: all .3s
  -ms-transition: all .3s
  -o-transition: all .3s
  transition: all .3s
  & .form-group label
    width 80px
  &.show
    display block;
    top 40%
    opacity 1
    height auto
  a.close
    cursor pointer
    font-size 16px
    display block
    width 20px
    height 20px
    line-height 20px
    text-align center
    position absolute
    right 10px
    top 10px
    &:hover
      color: #333
      font-weight bold
  .confirm_footer,.box_footer
    position relative
    bottom 0
    padding 10px
    left 0
    text-align right
    .button
      margin-left 10px
  .confirm_body,.box_body
    min-height 60px
    padding 20px
    font-size 16px
h1,h2,h3,h4,h5,h6
  a
    text-decoration none
.post_title
  h2
    float left
    width 60%
  p.info
    float right
    text-align right
    margin-top 25px
    color #aaaaaa
    a
      color #888888
      &:hover
        color #666
.pagination
  .prev
    float left
    padding 5px 18px
  .next
    float right
    padding 5px 18px
.tag_links
  float left
.category_link
  float right
.post_info
  color #9c9c9c
  a
    color #8a8a8a
    margin-left 5px
    &:hover
        color #666666
// User Page
img.avatar
  float left
  margin-right 10px
  width 128px
  -webkit-border-radius: 2px
  -moz-border-radius: 2px
  border-radius: 2px
.author
  padding 10px
  background  #f8f8f8
body.unloaded .loading
  width 100px
ul.albums_list
  list-style none
  margin 0
  padding 0
  li
    float left
    width 50%
    img.cover
      width 300px
